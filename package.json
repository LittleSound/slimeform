{
  "name": "slimeform",
  "version": "0.0.0",
  "type": "module",
  "description": "Form state management and validation for Vue3",
  "main": "dist/index.cjs",
  "author": {
    "name": "Ayaka Rizumu",
    "url": "https://github.com/LittleSound"
  },
  "keywords": [
    "vue3",
    "form",
    "utilities-library",
    "vue3-typescript"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "example": "vite example",
    "build": "tsup",
    "format": "dprint fmt",
    "lint": "run-p lint:*",
    "lint:example": "eslint ./example",
    "lint:format": "dprint check",
    "lint:types": "tsc",
    "lint:js": "eslint .",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "test": "vitest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.23.1",
    "@types/jsdom": "^16.2.14",
    "@types/node": "17.0.29",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vue/test-utils": "2.0.0-rc.21",
    "@vue/tsconfig": "^0.1.3",
    "@vueuse/shared": "^8.5.0",
    "dprint": "0.27.0",
    "eslint": "8.14.0",
    "husky": "7.0.4",
    "jsdom": "^19.0.0",
    "nano-staged": "0.8.0",
    "npm-run-all": "4.1.5",
    "tsup": "5.12.6",
    "typescript": "4.6.3",
    "vite": "2.9.6",
    "vitest": "0.10.0",
    "vue": "^3.2.33",
    "vue-tsc": "^0.34.15"
  },
  "peerDependencies": {
    "vue": ">=3"
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "sideEffects": false,
  "nano-staged": {
    "*.{js,ts,md,json,yaml}": "dprint fmt"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": {
      "resolve": true
    },
    "splitting": true,
    "clean": true
  }
}
