{
  "name": "slimeform",
  "version": "0.9.1",
  "type": "module",
  "description": "Form state management and validation for Vue3",
  "packageManager": "pnpm@8.15.3",
  "author": {
    "name": "Ayaka Rizumu",
    "url": "https://github.com/LittleSound"
  },
  "keywords": [
    "vue3",
    "form",
    "utilities-library",
    "vue3-typescript"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./resolvers": {
      "import": "./dist/resolvers.js",
      "default": "./dist/resolvers.cjs",
      "types": "./dist/resolvers.d.ts"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "resolvers.d.ts"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:tsup": "tsup --watch",
    "dev:example": "vite example",
    "build": "run-p build:tsup && run-p build:example",
    "build:tsup": "tsup",
    "build:example": "vite build example",
    "preview": "vite preview example --port 8080",
    "format": "eslint . --fix",
    "lint": "run-p lint:*",
    "lint:example": "eslint ./example",
    "lint:format": "eslint .",
    "lint:types": "run-p typecheck",
    "lint:markdown": "markdownlint -c .markdownlint.jsonc **/*.md",
    "typecheck": "tsc",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "clear": "rm -rf dist example/dist",
    "test": "vitest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@iconify-json/carbon": "^1.1.29",
    "@iconify-json/noto-v1": "^1.1.11",
    "@types/jsdom": "^16.2.15",
    "@types/node": "17.0.29",
    "@unocss/eslint-plugin": "^0.58.5",
    "@unocss/reset": "^0.34.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/test-utils": "2.4.4",
    "@vue/tsconfig": "^0.5.1",
    "@vueuse/core": "^10.7.2",
    "@vueuse/shared": "^10.7.2",
    "eslint": "8.56.0",
    "husky": "7.0.4",
    "jsdom": "^19.0.0",
    "markdownlint-cli": "^0.31.1",
    "nano-staged": "0.8.0",
    "npm-run-all": "4.1.5",
    "pnpm": "^8.15.3",
    "tsup": "6.5.0",
    "typescript": "4.9.4",
    "unocss": "^0.58.5",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.3",
    "vite-plugin-pages": "^0.32.0",
    "vitest": "^1.3.0",
    "vue": "^3.4.19",
    "vue-tsc": "^1.8.27",
    "yup": "^1.3.3"
  },
  "peerDependencies": {
    "vue": ">=3"
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "sideEffects": false,
  "nano-staged": {
    "*.{js,ts,md,json,yaml}": "eslint . --fix",
    "*.{md}": "markdownlint -c .markdownlint.jsonc **/*.md"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts",
      "resolvers": "packages/resolvers/index.ts"
    },
    "format": [
      "esm",
      "cjs"
    ],
    "dts": {
      "resolve": true
    },
    "splitting": true,
    "clean": true
  }
}
